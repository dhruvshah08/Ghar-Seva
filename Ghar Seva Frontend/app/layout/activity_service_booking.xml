<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServiceBookingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweatherblackitalic"
            android:textSize="24dp"
            android:layout_marginBottom="10dp"
            android:text="Service Provider Details:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/text_font"
                android:textSize="16dp"
                android:text="Name: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/text_font"
                android:textSize="16dp"
                android:id="@+id/txtServiceProviderName"
                android:hint="Service Provider Name "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/text_font"
                android:textSize="16dp"
                android:text="Service Type: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtServiceType"
                android:textSize="16dp"
                android:fontFamily="@font/text_font"
                android:hint="Service Provider Type "/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweatherblackitalic"
            android:textSize="24dp"
            android:layout_marginBottom="10dp"
            android:text="Customer Details:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/text_font"
                android:text="Contact Number: "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtContactNumber"
                android:textSize="16dp"
                android:fontFamily="@font/text_font"
                android:inputType="phone"
                android:hint=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/text_font"
                android:layout_marginBottom="5dp"
                android:text="Address: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtAddress"
                android:textSize="16dp"
                android:fontFamily="@font/text_font"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnConfirmBooking"
        android:textSize="17dp"
        android:letterSpacing="0.2"
        android:fontFamily="@font/merriweatherblackitalic"
        android:background="@drawable/registration_buttons_rounded"
        android:text="Confirm Booking"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recommendationBox"
        android:background="@drawable/recommendation_card"
        android:paddingTop="40dp"
        android:visibility="gone"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/text_font"
            android:paddingLeft="30dp"
            android:text="Customers usually use these services next:"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recommendation1"
                android:textSize="14dp"
                android:hint="Electronic Goods"
                android:layout_marginLeft="10dp"
                android:padding="20dp"
                android:fontFamily="@font/text_font"
                android:background="@drawable/registration_buttons_rounded"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recommendation2"
                android:textSize="14dp"
                android:hint="Sanitization"
                android:padding="20dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/text_font"
                android:background="@drawable/registration_buttons_rounded"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:hint="Carpenter"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/text_font"
            android:id="@+id/recommendation3"
            android:background="@drawable/registration_buttons_rounded"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:background="@color/semi_light_blue"
        android:layout_height="wrap_content">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />
    </LinearLayout>

</LinearLayout>