<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/other_lighter_blue"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    Image Holder-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="60dp"
        android:paddingLeft="20dp"
        android:paddingTop="60dp"
        >

        <ImageView
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:src="@drawable/finalicon1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:text="Welcome!"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:textColor="@color/blackish"
            android:textSize="48dp"
            android:fontFamily="@font/welcome_font"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="50dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:text="One stop destination for all your household service needs!"
            android:textSize="24dp"
            android:fontFamily="@font/pacificoregular"
            android:textColor="@color/blackish"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="172dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignIn"
            android:textSize="24dp"
            android:padding="15dp"
            android:textColor="@color/blackish"
            android:text="Sign In"
            android:fontFamily="@font/buttons_font"
            android:background="@color/transparent"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignUp"
            android:text="Sign Up"
            android:textColor="@color/blackish"
            android:background="@color/transparent"
            android:textSize="24dp"
            android:layout_marginLeft="150dp"
            android:padding="15dp"
            android:layout_marginRight="0dp"
            android:fontFamily="@font/buttons_font"
            />
    </LinearLayout>
</LinearLayout>