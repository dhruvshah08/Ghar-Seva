<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/other_lighter_blue"
    xmlns:android="http://schemas.android.com/apk/res/android">

<!--    Image Holder-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="60dp"
        android:paddingTop="60dp"
        >
        <ImageView
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:src="@drawable/finalicon3"
            />
    </LinearLayout>

<!--    Login Credentials-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:paddingTop="0dp"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/txtEmailID"
            android:textColor="@color/blackish"
            android:fontFamily="@font/text_font"
            android:hint="Email" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/txtPassword"
            android:inputType="textPassword"
            android:textColor="@color/blackish"
            android:fontFamily="@font/text_font"
            android:hint="Password" />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/registration_buttons_rounded"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/generic_button_font"
            android:letterSpacing="0.3"
            android:padding="20dp"
            android:textColor="@color/blackish"
            android:textSize="24dp"
            android:text="Sign In" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnForgotPassword"
        android:textColor="@color/blackish"
        android:fontFamily="@font/text_font"
        android:background="@color/transparent"
        android:text="Forgot Password" />

<!--        <Button-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:layout_marginLeft="50dp"-->
<!--            android:layout_marginRight="50dp"-->
<!--            android:layout_marginBottom="5dp"-->
<!--            android:drawableLeft="@drawable/google"-->
<!--            android:background="@drawable/registration_buttons_rounded"-->
<!--            android:id="@+id/btnSignInWithGoogle"-->
<!--            android:textColor="@color/blackish"-->
<!--            android:fontFamily="@font/google_button_font"-->
<!--            android:padding="15dp"-->
<!--            android:letterSpacing="0.1"-->
<!--            android:textSize="16dp"-->
<!--            android:text="Sign In With Google" />-->
        <com.google.android.gms.common.SignInButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:letterSpacing="0.1"
            android:visibility="gone"
            android:id="@+id/btnSignInWithGoogle"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginLeft="250dp"
            android:id="@+id/btnSignUpOption"
            android:paddingLeft="20dp"
            android:fontFamily="@font/buttons_font"
            android:textColor="@color/blackish"
            android:background="@color/transparent"
            android:textSize="24dp"
            />

    </LinearLayout>

</LinearLayout>